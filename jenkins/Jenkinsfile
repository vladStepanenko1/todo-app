pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                script{
                    def image = docker.build("todo-app:${env.BUILD_ID}", "-f docker/Dockerfile .")
                }
            }
        }
    }
    post{
        always{
            telegramSend(message:'${PROJECT_NAME}:${BUILD_STATUS}', chatId: '-1001154952259')
        }
    }
}