pipeline{
    agent{
        docker{
            image 'golang:alpine3.13'
            args '-e HOME=/tmp'
        }
    }

    stages{
        stage('Build'){
            steps{
                sh 'go build ./cmd/main.go -o todo-app'
            }
        }
    }
    post{
        success{
            archiveArtifacts artifacts: 'todo-app', fingerprint: true
        }
        always{
            deleteDir()
        }
    }
}