pipeline{
    agent any

    stages{
        stage('Build'){
            steps{
                sh 'pwd'
                sh 'ls -l'
                script{
                    def image = docker.build("todo-app:${env.BUILD_ID}", "-f docker/Dockerfile .")
                }
            }
        }
    }
    post{
        success{
            archiveArtifacts artifacts: 'todo-app', fingerprint: true
        }
    }
}